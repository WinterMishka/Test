	private: System::Void button1_Click(System::Object^ sender, System::EventArgs^ e) {
		DT^ f1 = gcnew DT();
		f1->Owner = this;
		f1->Show();							//Переход из GasStation в DT
		GasStation::Hide();
	}
	private: System::Void button2_Click(System::Object^ sender, System::EventArgs^ e) {
		AI_92^ f1 = gcnew AI_92();
		f1->Owner = this;
		f1->Show();							//Переход из GasStation в AI_92
		GasStation::Hide();
	}
	private: System::Void button3_Click(System::Object^ sender, System::EventArgs^ e) {
		AI_95^ f1 = gcnew AI_95();
		f1->Owner = this;
		f1->Show();							//Переход из GasStation в AI_95
		GasStation::Hide();
	}
	private: System::Void button4_Click(System::Object^ sender, System::EventArgs^ e) {
		AI_95^ f1 = gcnew AI_95();
		f1->Owner = this;
		f1->Show();							//Переход из GasStation в AI_95
		GasStation::Hide();
	}
	private: System::Void GasStation_Load(System::Object^ sender, System::EventArgs^ e) {
	}

	private: System::Void button5_Click(System::Object^ sender, System::EventArgs^ e) {

		button5->Text = 
			"ДТ = " + price_dt + " за 1 л. \n"
			"АИ-92 = " + price_ai92 + " за 1 л. \n"
			"АИ-95 = " + price_ai95 + " за 1 л. \n"  //показать цену топлива
			"АИ-98 = " + price_ai98 + " за 1 л. \n";

	}
	private: System::Void button6_Click(System::Object^ sender, System::EventArgs^ e) {
		Application::Exit();
	}
	private: System::Void button7_Click(System::Object^ sender, System::EventArgs^ e) {

		String^ password;
		String^ path = "password.txt";
		System::IO::StreamReader^ sr = gcnew System::IO::StreamReader(path);  //считывание из блокнота
		password = sr->ReadLine();
		sr->Close();

		if (textBox1->Text == password) {
			Administrator^ f1 = gcnew Administrator();
			f1->Owner = this;
			f1->Show();                                 //вход в панель Administator с паролем
			GasStation::Hide();
			textBox1->Clear();
		}
		else {
			MessageBox::Show("Неверный пароль. \nПовторите попытку");
		}
		
	}
private: System::Void textBox1_TextChanged(System::Object^ sender, System::EventArgs^ e) {
}
